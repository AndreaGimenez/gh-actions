{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    // Possible Errors
    "no-console": "warn", // Warn on console logs
    "no-debugger": "warn", // Warn on debugger statements

    // Best Practices
    "eqeqeq": ["error", "always"], // Use === and !== instead of == and !=

    // Stylistic Issues
    "indent": ["error", 2], // 2 spaces indentation
    "quotes": ["error", "single", { "avoidEscape": true }], // Single quotes preferred
    "semi": ["error", "always"], // Require semicolons

    // React-specific
    "react/react-in-jsx-scope": "off", // Not needed in React 17+
    "react/prop-types": "off", // We use TypeScript for type checking

    // TypeScript-specific
    "@typescript-eslint/no-unused-vars": [
      "warn",
      { "argsIgnorePattern": "^_" }
    ], // Warn on unused vars, ignore _args
    "@typescript-eslint/explicit-function-return-type": "off", // Usually off for conciseness
    "@typescript-eslint/no-explicit-any": "warn", // Warn on any usage

    // React Hooks
    "react-hooks/rules-of-hooks": "error", // Checks rules of Hooks
    "react-hooks/exhaustive-deps": "warn" // Checks effect dependencies
  }
}

